{
  "name": "knevee",
  "version": "4.0.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/reggi/knevee.git"
  },
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "main": "./dist/index.cjs",
  "bin": {
    "knevee": "dist/bin.cjs"
  },
  "scripts": {
    "build": "tsup --clean ./src/index.ts ./src/bin.ts --format esm,cjs --dts",
    "generate": "NODE_OPTIONS=\"--experimental-strip-types --experimental-detect-module --disable-warning=MODULE_TYPELESS_PACKAGE_JSON --disable-warning=ExperimentalWarning\" ./src/build/index.ts",
    "report": "open ./coverage/index.html",
    "style": "prettier --check .",
    "style:fix": "prettier --write .",
    "test": "NODE_OPTIONS=\"--experimental-strip-types --experimental-detect-module --disable-warning=MODULE_TYPELESS_PACKAGE_JSON --disable-warning=ExperimentalWarning\" npm run generate && mcr --import tsx tsx --experimental-test-snapshots --test",
    "test:snap": "npm run test -- --test-update-snapshots",
    "update": "npm run generate && npm run build && npm run style:fix && sort-package-json"
  },
  "prettier": "@github/prettier-config",
  "dependencies": {
    "which": "^5.0.0"
  },
  "devDependencies": {
    "@github/prettier-config": "^0.0.6",
    "@types/node": "^22.9.0",
    "@types/which": "^3.0.4",
    "mock-fs": "^5.4.1",
    "monocart-coverage-reports": "^2.11.2",
    "prettier": "^3.2.5",
    "sort-package-json": "^2.10.1",
    "tsup": "^8.3.5",
    "tsx": "^4.19.2",
    "typescript": "^5.6.3"
  }
}